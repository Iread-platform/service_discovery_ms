
##############################################################
#############   consul service discovery    ##################
##############################################################

##pull the consul docker image and run container from it:

docker run \
    -d \
    -p 8500:8500 \
    -p 8600:8600/udp \
    --name=consul \
    --hostname=consul \
    consul agent -dev -ui -node=server-1 -bootstrap-expect=1 -client=0.0.0.0

##############################################################